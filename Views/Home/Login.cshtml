@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using PRN222_EnglishQuiz.Models
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center">Log In</h2>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label class="form-label">Email</label>
                <input name="Email" class="form-control"/>
                <span class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Password</label>
                <input name="PasswordHash" class="form-control" type="password" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

            <div class="text-center mt-3">
                <p>Don't have an account? <a asp-controller="Home" asp-action="Signup">Sign Up</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        window.onload = function () {
            var error = '@ViewBag.LoginError';
            var success = '@ViewBag.LoginSuccess';

            if (error) {
                Swal.fire({
                    icon: 'error',
                    title: error
                });
            }
        };
    </script>
}


