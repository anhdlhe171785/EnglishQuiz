@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using PRN222_EnglishQuiz.Models

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-primary mb-1">📝 Exam Management</h3>
            <a asp-controller="Admin" asp-action="Dashboard"
               class="btn btn-light border shadow-sm rounded-pill d-inline-flex align-items-center gap-2 px-3 py-2 mt-1">
                <i class="bi bi-arrow-left-circle-fill text-primary fs-5"></i>
                <span class="fw-semibold text-dark">Back to Dashboard</span>
            </a>
        </div>
        <button class="btn btn-success rounded-pill px-4 py-2 shadow-sm h-100"
                data-bs-toggle="modal" data-bs-target="#addExamModal">
            ➕ Add Exam
        </button>
    </div>

    <div class="table-responsive shadow-sm rounded-4">
        <table class="table table-bordered table-hover text-center align-middle table-striped border-primary-subtle">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Visible</th>
                    <th>Created At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Exam e in ViewBag.Exams)
                {
                    <tr>
                        <td>@e.Id</td>
                        <td>@e.Title</td>
                        <td>@e.Description</td>
                        <td>@(e.IsVisible ? "✅" : "❌")</td>
                        <td>@e.CreatedAt?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-warning btn-sm" asp-action="ExamDetail" asp-route-id="@e.Id">
                                    Sửa
                                </a>
                                <a href="/Admin/DeleteExam/@e.Id"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this exam?');">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Thêm bài thi -->
<div class="modal fade" id="addExamModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="AddExam" asp-controller="Admin" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Thêm bài thi</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-start">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control" name="Title" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="Description" required></textarea>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" name="IsVisible" value="true" id="visibleCheck" checked />
                        <label class="form-check-label" for="visibleCheck">Hiển thị bài thi</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Thêm</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["Success"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: '@TempData["Success"]',
                    showConfirmButton: false,
                    timer: 2000
                });
            </text>
        }
    </script>
}
